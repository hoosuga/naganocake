<!DOCTYPE html>
<html>
  <head>
    <title>ながのCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <div class="container">
        <div class="row">
          <div class="col-lg-2">
            <nav class="navbar navbar-expand-lg navbar-light">
              <%= link_to image_tag("ロゴ.jpg", size: '150x120'), root_path %>
            </nav>
          </div>
          <div class="col-lg-10 d-flex justify-content-end">
          <nav>
            <ul class="nav navbar-nav navbar-right ml-auto nav-pills nav-item">
              <% if customer_signed_in? %>
                <li class="nav-item"><%= render 'public/shared/after_sign_in_public' %></li>
              <% elsif admin_signed_in? %>
                <li class="nav-item"><%= render 'admin/shared/after_sign_in_admin' %></li>
              <% else %>
                <li class="nav-item"><%= render 'admin/shared/before_sign_in' %></li>
              <% end %>
            </ul>
          </nav>
          </div>
        </div>
      </div>
    </header>

    <main>
      <div class="container" style="margin-top: 20px;">
        <%= yield %>
      </div>
    </main>

    <footer>
       <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight © 2023 NAGANOCake Inc.</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
