<!DOCTYPE html>
<html>
  <head>
    <title>ながのCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <%= link_to image_tag("ロゴ.jpg", size: '150x120'), root_path %>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right ml-auto">
            <% if customer_signed_in? %>
              <%= render 'public/shared/after_sign_in_public' %>
            <% elsif admin_signed_in? %>
              <%= render 'admin/shared/after_sign_in_admin' %>
            <% else %>
              <%= render 'admin/shared/before_sign_in' %>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer>
    </footer>
  </body>
</html>
