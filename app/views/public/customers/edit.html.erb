<h4>会員情報編集</h4>

<%= form_with model: @customer, url: customer_update_path do |f| %>
  <div class="form-group">
    氏名
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "(姓)" %>

    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "(名)" %>
  </div>

  <div class="form-group">
    フリガナ
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "(セイ)" %>

    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "(メイ)" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号(ハイフンなし)" %>
  </div>

  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
  </div>

  <div class="form-group">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "電話番号(ハイフンなし)" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>

<%= link_to customer_confirm_withdraw_path, class:'nav-link' do %>
  退会する
<% end %>
