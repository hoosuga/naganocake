<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-1">
      <h5 class="p-3"><span style="background-color:#dcdcdc;">　新規会員登録　</span></h5>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10" style="padding-left: 70px;">
      <table class="table table-borderless">
        <tbody>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
            <tr>
              <td class="col-lg-3">名前</td>
              <td style="padding-left: 0px;">
                <span style="margin-right: 14px;"><%= f.label :last_name, "(姓)" %></span>
                <span style="margin-right: 30px;"><%= f.text_field :last_name, autofocus: true, autocomplete: "(姓)", placeholder:"令和", :size=>"28" %></span>
                <span style="margin-right: 18px;"><%= f.label :first_name, "(名)" %></span>
                <span><%= f.text_field :first_name, autofocus: true, autocomplete: "(名)", placeholder:"道子", :size=>"28" %></span>
              </td>
            </tr>
            <tr>
              <td style="padding-top: 0px;">フリガナ</td>
              <td style="padding-top: 0px; padding-left: 0px;">
                <span><%= f.label :last_name_kana, "(セイ)" %></span>
                <span style="margin-right: 30px;"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "(セイ)", placeholder:"レイワ", :size=>"28" %></span>
                <span><%= f.label :first_name_kana, "(メイ)" %></span>
                <span><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "(メイ)", placeholder:"ミチコ", :size=>"28" %></span>
              </td>
            </tr>
            <tr>
              <td style="padding-top: 0px;">メールアドレス</td>
              <td style="padding-top: 0px; padding-left: 0px;">
                <span style="margin-left: 47px;"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", :size=>"28" %></span>
              </td>
            </tr>
            <tr>
              <td style="padding-top: 0px;">郵便番号(ハイフンなし)</td>
              <td style="padding-top: 0px; padding-left: 0px;">
                <span style="margin-left: 47px;"><%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号(ハイフンなし)", placeholder:"0000000", :size=>"28" %></span>
              </td>
            </tr>
            <tr>
              <td style="padding-top: 0px;">住所</td>
              <td style="padding-top: 0px; padding-left: 0px;">
                <span style="margin-left: 47px;"><%= f.text_field :address, autofocus: true, autocomplete: "住所", placeholder:"東京都渋谷区代々木神園町0-0", :size=>"73" %></span>
              </td>
            </tr>
            <tr>
              <td style="padding-top: 0px;">電話番号(ハイフンなし)</td>
              <td style="padding-top: 0px; padding-left: 0px;">
                <span style="margin-left: 47px;"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "電話番号(ハイフンなし)", placeholder:"00000000000", :size=>"28" %></span>
              </td>
            </tr>
            <tr>
              <td style="padding-top: 0px;">パスワード(6文字以上)</td>
              <td style="padding-top: 0px; padding-left: 0px;">
                <span style="margin-left: 47px;">
                  <% if @minimum_password_length %>
                    <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
                  <% end %>
                  <%= f.password_field :password, autocomplete: "new-password", :size=>"28" %>
                </span>
              </td>
            </tr>
            <tr>
              <td style="padding-top: 0px;">パスワード(確認用)</td>
              <td style="padding-top: 0px; padding-left: 0px;">
                <span style="margin-left: 47px;"><%= f.password_field :password_confirmation, autocomplete: "new-password", :size=>"28" %></span>
              </td>
            </tr>
            <tr>
              <td></td>
              <td style="padding-top: 10px; padding-left: 0px;">
                <span style="margin-left: 47px;"><%= f.submit "　　新規登録　　", class: "btn btn-success" %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 offset-lg-1">
      <h5 class="p-3"><span style="background-color:#dcdcdc;">　既に登録済みの方　</span></h5>
      <spn style="margin-left: 70px; font-size: 18px;"><%= link_to "こちら", new_customer_session_path %>　からログインしてください。</spn>
    </div>
  </div>
</div>

<%#= render "public/shared/links" %>
