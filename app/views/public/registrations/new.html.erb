<h4>新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <!--<div class="field">
    名前
    <%#= f.label :last_name, "(姓)" %>
    <%#= f.last_name_field :last_name, autofocus: true, autocomplete: "(姓)" %>

    <%#= f.label :first_name, "(名)" %>
    <%#= f.last_name_field :first_name, autofocus: true, autocomplete: "(名)" %>
  </div>
  -->
  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h4>すでに登録済みの方</h4>
  <%= link_to "こちら", new_customer_session_path %>からログインしてください。
<%#= render "public/shared/links" %>
