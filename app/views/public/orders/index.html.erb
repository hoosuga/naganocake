<div class="container">
  <div class="row">
    <div class="col-lg-11 offset-lg-2">
      <h5>注文履歴一覧</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <table class="table table-borderless table-sm">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= localize order.created_at, format: :short %></td>
              <td>〒<%= order.postal_code %></br>
                  <%= order.address %></br>
                  <%= order.name %>
              </td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %>
                <% end %>
              </td>
              <td><%= order.invoice_amount.to_s(:delimited) %>円</td>
              <td><%= order.order_status_i18n %></td>
              <td><%= link_to order_show_path(order.id) do %>表示する<% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
