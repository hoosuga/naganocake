<div class="container">
  <div class="row">
    <div class="col-lg-11 offset-lg-2">
      <h5>注文履歴詳細</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 offset-lg-1">
      <p class="font-weight-bold">注文情報</p>
      <table>
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= localize @order.created_at, format: :short %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>〒<%= @order.postal_code %> <%= @order.address %></br>
                <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td>支払い方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td><%= @order.order_status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-lg-3">
      <p class="font-weight-bold">請求情報</p>
      <table>
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>商品合計</td>
            <td><% @sum =  @order.invoice_amount - @order.postage %>
                <%= @sum.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td>配送料</td>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <td class="font-weight-bold">ご請求額</td>
            <td><%= @order.invoice_amount.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <p class="font-weight-bold">注文内容</p>
      <table>
        <thead>
          <tr>
            <th>商品</th>
            <th>単価 (税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td>
              <%= order_detail.item.name %>
            </td>
            <td>
              <%= order_detail.item.tax_price.to_s(:delimited) %>
            </td>
            <td>
              <%= order_detail.amount %>
            </td>
            <td>
              <%= order_detail.subtotal %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>