<%= render 'public/shared/genre_search', genres: @genres %>

<h2>商品一覧</h2><h5>(全<%= @items.count %>件)</h5>

<% @items.each do |item| %>
  <div>
  <%= image_tag item.image, size:"150x100" %></br>
  商品名　<%= item.name %></br>
  ￥<%= item.tax_price.to_s(:delimited) %>
  </div>
<% end %>
<%= paginate @items %>

