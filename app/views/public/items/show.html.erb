<div class="container">
  <div class="row" style="margin-bottom: 200px;">
    <div class="col-lg-3" style="padding-left: 70px;">
      <%= render 'public/shared/genre_search', genres: @genres %>
    </div>
    <div class="col-lg-4" style="padding-right: 0px;">
      <%= image_tag @item.image, size:"300x200" %>
    </div>
    <div class="col-lg-5" style="padding-left: 0px;">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td style="padding-left: 0px; padding-bottom: 0px;">
              <span class="font-weight-bold" style="font-size:35px;"><%= @item.name %></span>
            </td>
          </tr>
          <tr>
            <td style="padding-left: 0px; padding-bottom: 50px;">
              <span style="font-size: 22px; "><%= @item.introduction %></span>
            </td>
          </tr>
          <tr>
            <td style="padding-left: 0px; padding-bottom: 20px;">
              <span class="font-weight-bold" style="font-size:28px;">￥<%= @item.tax_price.to_s(:delimited) %></span>
              <span style="font-size:15px">(税込)</span>
            </td>
          </tr>
          <tr>
            <td>
              <%= form_with model: @cart_item do |f| %>
                <%= f.hidden_field :item_id, :value => @item.id %>
                <%= f.hidden_field :customer_id, :value => current_customer.id %>
                <span style="margin-left: 15px; margin-right: 30px;"><%= f.select :amount, *[1..10] , {:prompt => "個数選択"} %></span>
                <%= f.submit ' カートに入れる ', class: "btn btn-success"  %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>