<%= render 'public/shared/genre_search', genres: @genres %>

<div>
  <%= image_tag @item.image, size:"150x100" %>
</div>

<h1>
 <%= @item.name %>
</h1>
<h2>
  <%= @item.introduction %>
</h2>
<h1>
  ￥<%= @item.tax_price.to_s(:delimited) %>
  <span style="font-size:20px">(税込)</span>
</h1>

<div>
  <%= form_with model: @cart_item do |f| %>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.hidden_field :customer_id, :value => current_customer.id %>
    <%= f.select :amount, *[1..10] , {:include_blank => "個数選択"} %>
    <%= f.submit 'カートに入れる' %>
  <% end %>
</div>