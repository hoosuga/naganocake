<h4>配送先登録・一覧</h4>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= form_with model: @delivery, url: deliveries_create_path, method: :post do |f| %>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <th><%= f.text_field :postal_code, placeholder:"0000000" %></th>
      <th></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0" %></th>
      <th></th>
    </tr>
    <tr>
      <th>宛名</th>
      <th><%= f.text_field :name, placeholder:"令和道子" %></th>
      <th>
        <%= button_tag(type: "submit", class: "btn btn-success") do %>
          新規登録
        <% end %>
      </th>
    </tr>
  </tbody>
</table>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.postal_code %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.name %></td>
        <td>
          <%= link_to deliveries_edit_path(delivery.id), class:'nav-link' do %>編集する<% end %>
          <%= link_to deliveries_destroy_path(delivery.id), method: :delete do %>削除する<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
