<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-11">
    <h4>注文履歴一覧</h4>
    </div>
  </div>

 <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-7">
      <table>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_orders_show_path(order.id) do %>
                  <%= order.created_at %>
                <% end %>
              </td>
              <td>
                <%= order.customer.last_name %><%= order.customer.first_name %>
              </td>
              <td>
                <%= order.get_amount(order) %>
              </td>
              <td>
                <%= order.order_status %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row d-flex align-items-center justify-content-center">
    <%= paginate @orders %>
  </div>
</div>
