<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-1">
      <h5 class="p-3"><span style="background-color:#dcdcdc;">　ジャンル編集　</span></h5>
    </div>
  </div>
  <div class="row" style="margin-bottom: 300px;">
    <div class="col-lg-9" style="padding: 10px;">
      <table class="table table-borderless">
        <%= form_with model: @genre, url: admin_genres_update_path, method: :patch do |f| %>
          <tr>
            <td class="col-lg-2 font-weight-bold">ジャンル名</td>
            <td style="width: 30px;"><%= f.text_field :name %></td>
            <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>