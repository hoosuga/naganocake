<h4>ジャンル一覧・追加</h4>

<%= form_with model: @genre, url: admin_genres_create_path, method: :post do |f| %>
<div class="form-group">
  ジャンル名
  <%= f.text_field :name %>

  <%= button_tag(type: "submit", class: "btn btn-success") do %>
  新規登録<% end %>
</div>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to admin_genres_edit_path(genre.id), class:'nav-link' do %>
            編集する
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>