<div class="container">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <h5 class="p-3"><span style="background-color:#dcdcdc;">管理者ログイン</span></h5>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-9 offset-lg-3">
      <table class="table table-borderless">
        <tbody>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <tr>
              <td class="col-lg-3"><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" , size: 40 %></td>
            </tr>
            <tr>
              <td class="col-lg-3" style="padding-top: 0px"><%= f.label :password, "パスワード" %></td>
              <td style="padding-top: 0px"><%= f.password_field :password, autocomplete: "current-password", size: 40%></td>
            </tr>
            <tr>
              <td></td>
              <td><%= button_tag(type: "submit", class: "btn btn-primary") do %>　ログイン　<% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render "admin/shared/links" %>
