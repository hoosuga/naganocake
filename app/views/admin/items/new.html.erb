<h4>商品新規登録</h4>

<%= form_with model: @item, url: admin_item_create_path, method: :post do |f| %>
<div class="form-group">
  商品画像
  <%= f.file_field :image, accept: "image/*" %>
</div>

<div class="form-group">
  商品名
  <%= f.text_field :name %>

  <%= button_tag(type: "submit", class: "btn btn-success") do %>
  新規登録<% end %>
</div>
<% end %>