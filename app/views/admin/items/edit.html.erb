<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-1">
      <h5 class="p-3"><span style="background-color:#dcdcdc;">　商品編集　</span></h5>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-9 offset-lg-3">
      <table class="table table-borderless">
        <tbody>
          <%= form_with model: @item, url: admin_item_update_path, method: :patch do |f| %>
            <tr>
              <td class="col-lg-2">商品画像</td>
              <td ><%= f.file_field :image %></td>
            </tr>
            <tr>
              <td class="col-lg-2" style="padding-top: 0px">商品名</td>
              <td style="padding-top: 0px"><%= f.text_field :name, :size=>"35" %></td>
            </tr>
            <tr>
              <td class="col-lg-2" style="padding-top: 0px">商品説明</td>
              <td style="padding-top: 0px"><%= f.text_area :introduction, :size=>"37.5" %></td>
            </tr>
            <tr>
              <td class="col-lg-2" style="padding-top: 0px">ジャンル</td>
              <td style="padding-top: 0px; width: 295px;"><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre_display), {style: 'width: 295px;'} %></td>
            </tr>
            <tr>
              <td class="col-lg-2" style="padding-top: 0px">税抜価格</td>
              <td style="padding-top: 0px"><%= f.text_field :price, :size=>"35" %></td>
            </tr>
            <tr>
              <td class="col-lg-2" style="padding-top: 0px">販売ステータス</td>
              <td style="padding-top: 0px">
                <%= f.radio_button :sale_status, true %><%= f.label :sale_status_true, "販売中" %>
                <%= f.radio_button :sale_status, false %><%= f.label :sale_status_false, "販売中止" %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
  <div class="row d-flex justify-content-center" style="margin-bottom: 100px;">
    <%= button_tag(type: "submit", class: "btn btn-success") do %>　変更を保存　<% end %>
  </div>
  <% end %>
</div>