<h4>商品編集</h4>

<%= form_with model: @item, url: admin_item_update_path, method: :patch do |f| %>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>商品画像</td>
      <td><%= f.file_field :image %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= f.text_area :introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre_display) %></td>
    </tr>
    <tr>
      <td>税抜価格</td>
      <td><%= f.text_field :price %></td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td>
        <%= f.radio_button :sale_status, true %><%= f.label :sale_status_true, "販売中" %>
        <%= f.radio_button :sale_status, false %><%= f.label :sale_status_false, "販売中止" %>
      </td>
    </tr>
  </tbody>
</table>
<div>
  <%= button_tag(type: "submit", class: "btn btn-success") do %>
    変更を保存
  <% end %>
</div>
<% end %>