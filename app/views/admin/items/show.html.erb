<div class="container">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <h5 class="p-3"><span style="background-color:#dcdcdc;">　商品詳細　</span></h5>
    </div>
　</div>
　<div class="row">
    <div class="col-lg-3 offset-lg-1">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size:"200x150" %>
      <% else %>
        <%= image_tag 'no_image', size:"200x150" %>
      <% end %>
    </div>
    <div class="col-lg-8">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td style="padding-top: 0px">商品説明</td>
            <td style="padding-top: 0px"><%= @item.introduction %></td>
          </tr>
          <tr>
            <td style="padding-top: 0px">ジャンル</td>
            <td style="padding-top: 0px"><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td style="padding-top: 0px">税込価格</br>(税抜価格)</td>
            <td><%= @item.tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円</td>
          </tr>
          <tr>
            <td style="padding-top: 0px">販売ステータス</td>
            <td style="padding-top: 0px">
              <% if @item.sale_status == true %>
                <span class="font-weight-bold" style="color:#00AA00;">販売中</span>
              <% else %>
                <span class="font-weight-bold"  style="color:#C0C0C0;">販売停止中</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row d-flex justify-content-center" style="margin-bottom: 100px;">
    <%= link_to "　編集する　", admin_item_edit_path(@item.id), class: 'btn btn-success' %>
  </div>
</div>