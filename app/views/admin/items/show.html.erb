<div class="container">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <h5 class="p-3"><span style="background-color:#dcdcdc;">　商品詳細　</span></h5>
    </div>
　</div>
　<div class="row">
    <div class="col-lg-4 offset-lg-1">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size:"200x150" %>
      <% else %>
        <%= image_tag 'no_image', size:"200x150" %>
      <% end %>
    </div>
    <div class="col-lg-5">
      <table>
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格</br>(税抜価格)</td>
            <td><%= @item.tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.sale_status == true %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <%= link_to admin_item_edit_path(@item.id) do %>
      編集する
    <% end %>
  </div>
</div>