<h4>
  <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
</h4>

<%= form_with model: @customer, url: admin_customers_update_path, method: :patch do |f| %>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :last_name %>　<%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <%= f.radio_button :is_deleted, true %><%= f.label :sale_status_true, "退会" %>
        <%= f.radio_button :is_deleted, false %><%= f.label :sale_status_false, "有効" %>
      </td>
    </tr>
  </tbody>
</table>
<div>
  <%= button_tag(type: "submit", class: "btn btn-success") do %>
    変更を保存
  <% end %>
</div>
<% end %>
