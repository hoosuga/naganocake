<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-1">
      <h5 class="p-3"><span style="background-color:#dcdcdc;">　会員一覧　</span></h5>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-lg-9 offset-lg-1 px-0">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th class="col-lg-1">会員ID</th>
            <th class="col-lg-3">氏名</th>
            <th class="col-lg-3">メールアドレス</th>
            <th class="col-lg-2">ステータス</th>
          </tr>
        </thead>
        <tbody class="border-bottom">
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customers_show_path(customer.id) do %>
                  <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == false %>
                  <span class="font-weight-bold" style="color:#00AA00;">有効</span>
                <% else %>
                  <span class="font-weight-bold"  style="color:#C0C0C0;">退会</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row d-flex justify-content-center p-2">
    <%= paginate @customers %>
  </div>
</div>
