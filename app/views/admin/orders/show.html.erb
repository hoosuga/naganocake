<div class="container">
  <div class="row">
    <div class="col-lg-11 offset-lg-2">
      <h5>注文履歴詳細</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <table class="table table-borderless table-sm">
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= form_with model: @order, url: admin_orders_update_path, method: :patch do |f| %>
            <tr>
              <td class="col-lg-2 font-weight-bold">購入者</td>
              <td><%= link_to admin_customers_show_path(@customer.id) do %>
                    <%= @order.customer.last_name %><%= @order.customer.first_name %>
                  <% end %>
              </td>
            </tr>
            <tr>
              <td class="col-lg-2 font-weight-bold">注文日</td>
              <td><%= localize @order.created_at, format: :short %></td>
            </tr>
            <tr>
              <td class="col-lg-2 font-weight-bold">配送先</td>
              <td>〒<%= @order.postal_code %> <%= @order.address %></br>
                  <%= @order.name %>
              </td>
            </tr>
            <tr>
              <td class="col-lg-2 font-weight-bold">支払い方法</td>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <td class="col-lg-2 font-weight-bold">注文ステータス</td>
              <td><%= f.select :order_status, Order.order_statuses_i18n.values %>
                    <%= button_tag(type: "submit", class: "btn btn-success") do %>
                      更新
                    <% end %>
             </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

<!-- order_details -->
  <div class="row">
    <div class="col-lg-7 offset-lg-1">
      <table>
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td>
              <%= order_detail.item.name %>
            </td>
            <td>
              <%= order_detail.item.tax_price.to_s(:delimited) %>
            </td>
            <td>
              <%= order_detail.amount %>
            </td>
            <td>
              <%= order_detail.subtotal %>
            </td>
            <td>
              <%#= form_with model: @order_detail, url: admin_orders_update_path(order_id: @order, id: @order_detail), method: :patch do |f| %>
                <%#= f.select :crafting_status, OrderDetail.crafting_statuses_i18n.values %>
                <%#= button_tag(type: "submit", class: "btn btn-success") do %>
                  更新
                <%# end %>
              <%# end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-4 d-flex align-items-end">
      <table>
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="font-weight-bold p-1">合計金額</td>
            <td>
              <% @sum =  @order.invoice_amount - @order.postage %>
              <%= @sum.to_s(:delimited) %>円
            </td>
          </tr>
          <tr>
            <td class="font-weight-bold p-1">送料</td>
            <td><%= @order.postage %>円</td>
          </tr>
          <tr>
            <td class="font-weight-bold p-1">請求合計金額</td>
            <td class="font-weight-bold"><%= @order.invoice_amount.to_s(:delimited) %>円</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>