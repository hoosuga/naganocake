<h4>注文履歴詳細</h4>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>購入者</td>
      <td><%= link_to admin_customers_show_path(@customer.id) do %>
            <%= @order.customer.last_name %><%= @order.customer.first_name %>
          <% end %>
      </td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= localize @order.created_at, format: :short %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>〒<%= @order.postal_code %> <%= @order.address %></br>
          <%= @order.name %>
      </td>
    </tr>
    <tr>
      <td>支払い方法</td>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <td>
        <%= form_with model: @order, url: admin_orders_update_path, method: :patch do |f| %>
          <%= f.select :order_status, Order.order_statuses_i18n.values %>
          <%= button_tag(type: "submit", class: "btn btn-success") do %>
            更新
          <% end %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<!-- order_details -->
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @order_detail.item.name %>
      </td>
      <td>
        <%= @order_detail.item.tax_price.to_s(:delimited) %>
      </td>
      <td>
        <%= @order_detail.amount %>
      </td>
      <td>
        <%= @order_detail.subtotal %>
      </td>
      <td>
        <%= form_with model: @order_detail, url: admin_orders_update_path(order_id: @order, id: ), method: :patch do |f| %>
          <%= f.select :crafting_status, OrderDetail.crafting_statuses_i18n.values %>
          <%= button_tag(type: "submit", class: "btn btn-success") do %>
            更新
          <% end %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>合計金額</td>
      <td>
        <% @sum =  @order.invoice_amount - @order.postage %>
        <%= @sum.to_s(:delimited) %>円
      </td>
    </tr>
    <tr>
      <td>送料</td>
      <td><%= @order.postage %>円</td>
    </tr>
    <tr>
      <td>請求合計金額</td>
      <td><%= @order.invoice_amount.to_s(:delimited) %>円</td>
    </tr>
  </tbody>
</table>